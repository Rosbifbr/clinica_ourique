<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-12 col-md-6 col-lg-5">
      <div id="<%= dom_id user %>" class="card shadow-lg">
        <div class="card-header bg-primary bg-gradient text-white py-3">
          <h4 class="card-title mb-0">
            <i class="bi bi-person-circle me-2"></i>
            User Details
          </h4>
        </div>

        <div class="card-body p-4">
          <div class="mb-4">
            <label class="form-label fw-medium">Name</label>
            <div class="input-group">
              <span class="input-group-text">
                <i class="bi bi-person"></i>
              </span>
              <div class="form-control bg-light">
                <%= user.name %>
              </div>
            </div>
          </div>

          <div class="mb-4">
            <label class="form-label fw-medium">Password</label>
            <div class="input-group">
              <span class="input-group-text">
                <i class="bi bi-key"></i>
              </span>
              <div class="form-control bg-light">
                <div class="d-flex align-items-center">
                  <span class="flex-grow-1 text-muted">••••••••</span>
                  <button class="btn btn-sm btn-outline-secondary"
                          type="button"
                          disabled
                          title="Password is encrypted">
                    <i class="bi bi-shield-lock"></i>
                  </button>
                </div>
              </div>
            </div>
            <div class="form-text text-muted">
              <i class="bi bi-info-circle me-1"></i>
              Password is encrypted and cannot be displayed
            </div>
          </div>
        </div>

        <div class="card-footer bg-light p-3">
          <div class="d-flex justify-content-center gap-3">
            <%= button_to edit_user_path(user), method: :get, class: "btn btn-secondary" do %>
              <i class="bi bi-pencil-square me-1"></i>Edit
            <% end %>
            <%= button_to @user, method: :delete,
                class: "btn btn-danger",
                data: { turbo_confirm: "Are you sure you want to delete this user?" } do %>
              <i class="bi bi-trash me-1"></i>Delete
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
