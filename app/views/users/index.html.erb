<% content_for :title, "Users" %>

<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2>
      <i class="bi bi-person-square me-2"></i>Users
    </h2>
  </div>

  <table class="table table-striped table-hover table-bordered">
    <thead>
      <tr>
        <th>Name</th>
        <th class="text-center">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td class="align-middle">
            <%= link_to user.name, user_path(user), class: "text-decoration-none" %>
          </td>
          <td>
            <div class="d-flex justify-content-center gap-2">
              <%= button_to user_path(user), method: :get, class: "btn btn-primary btn-sm" do %>
                <i class="bi bi-eye me-1"></i>Show
              <% end %>
              <%= button_to edit_user_path(user), method: :get, class: "btn btn-secondary btn-sm" do %>
                <i class="bi bi-pencil-square me-1"></i>Edit
              <% end %>
              <%= button_to user_path(user),
                  method: :delete,
                  class: "btn btn-danger btn-sm",
                  data: { turbo_confirm: "Are you sure?" } do %>
                <i class="bi bi-trash me-1"></i>Delete
              <% end %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="mt-4">
    <%= button_to new_user_path, method: :get, class: "btn btn-primary" do %>
      <i class="bi bi-plus-circle me-1"></i>Add New User
    <% end %>
  </div>
</div>
