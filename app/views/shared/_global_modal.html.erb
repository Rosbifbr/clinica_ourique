<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content border-0 shadow-lg rounded-3">
      <div class="modal-header bg-danger text-white d-flex justify-content-center position-relative">
        <h5 class="modal-title fw-bold" id="deleteModalLabel">
          <i class="bi bi-exclamation-triangle-fill me-2"></i>Delete <span id="deleteItemName"></span>
        </h5>
        <button type="button" class="btn-close btn-close-white position-absolute end-0 me-3" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body text-center py-4">
        <p class="fs-5 text-muted mb-4">
          Are you sure you want to delete this <span id="deleteItemType"></span>? <br>This action <strong>cannot</strong> be undone.
        </p>
      </div>
      <div class="modal-footer d-flex justify-content-center border-0 pb-4">
        <button type="button" class="btn btn-outline-secondary px-4" data-bs-dismiss="modal">
          <i class="bi bi-x-circle me-1"></i> Cancel
        </button>
        <form id="deleteForm" method="post" action="">
          <input type="hidden" name="_method" value="delete">
          <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
          <button type="submit" class="btn btn-danger px-4">
            <i class="bi bi-trash-fill me-1"></i> Delete
          </button>
        </form>
      </div>
    </div>
  </div>
</div>


