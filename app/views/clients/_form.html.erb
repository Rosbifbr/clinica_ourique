<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-12 col-md-12">
      <%= form_with(model: client, class: "card shadow-lg") do |form| %>
        <div class="card-header bg-primary bg-gradient text-white py-3">
          <h4 class="card-title mb-0">
            <i class="bi bi-person-fill me-2"></i>
            <%= client.new_record? ? "New Client" : "Edit Client" %>
          </h4>
        </div>

        <div class="card-body p-4">
          <% if client.errors.any? %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
              <div class="d-flex align-items-center">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                <h6 class="mb-0"><%= pluralize(client.errors.count, "error") %> prohibited this client from being saved:</h6>
              </div>
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
              <ul class="mb-0 mt-2">
                <% client.errors.each do |error| %>
                  <li><%= error.full_message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="row g-3 fs-5">
            <div class="col-12">
              <%= form.label :name, class: "form-label fw-medium" %>
              <div class="input-group">
                <span class="input-group-text"><i class="bi bi-person"></i></span>
                <%= form.text_field :name, class: "form-control", placeholder: "Enter name" %>
              </div>
            </div>

            <div class="col-md-6">
              <%= form.label :cpf, class: "form-label fw-medium" %>
              <div class="input-group">
                <span class="input-group-text"><i class="bi bi-card-text"></i></span>
                <%= form.text_field :cpf, class: "form-control", placeholder: "Enter CPF" %>
              </div>
            </div>

            <div class="col-md-6">
              <%= form.label :phone, class: "form-label fw-medium" %>
              <div class="input-group">
                <span class="input-group-text"><i class="bi bi-telephone"></i></span>
                <%= form.text_field :phone, class: "form-control", placeholder: "Enter phone number" %>
              </div>
            </div>

            <div class="col-md-6">
              <%= form.label :birthdate, class: "form-label fw-medium" %>
              <div class="input-group">
                <span class="input-group-text"><i class="bi bi-calendar"></i></span>
                <%= form.date_field :birthdate, class: "form-control" %>
              </div>
            </div>

            <div class="col-md-6">
              <%= form.label :postal_code, class: "form-label fw-medium" %>
              <div class="input-group">
                <span class="input-group-text"><i class="bi bi-geo-alt"></i></span>
                <%= form.text_field :postal_code, class: "form-control", placeholder: "Enter postal code" %>
              </div>
            </div>

            <div class="col-12">
              <%= form.label :address, class: "form-label fw-medium" %>
              <div class="input-group">
                <span class="input-group-text"><i class="bi bi-house"></i></span>
                <%= form.text_field :address, class: "form-control", placeholder: "Enter address" %>
              </div>
            </div>

            <div class="col-12">
              <%= form.label :neighborhood, class: "form-label fw-medium" %>
              <div class="input-group">
                <span class="input-group-text"><i class="bi bi-building"></i></span>
                <%= form.text_field :neighborhood, class: "form-control", placeholder: "Enter neighborhood" %>
              </div>
            </div>
          </div>

            <div class="col-12 mt-5">
              <div class="d-flex justify-content-between align-items-center border-bottom pb-2 mb-3">
                <h4 class="mb-0">
                  <i class="bi bi-journal-text me-2"></i>Client Observation
                </h4>
              </div>
              <%= form.text_area :observation, class: "bg-light form-control", placeholder: "Enter observation for this client", rows: 3%>
            </div>

            <!-- Image Upload Section -->
            <div class="mt-4">
              <div class="d-flex justify-content-between align-items-center border-bottom pb-2 mb-3">
                <h4 class="mb-0">
                  <i class="bi bi-image me-2"></i>Client Images
                </h4>
              </div>
              <div class="mb-3">
                <%= form.file_field :images, multiple: true, class: "form-control" %>
              </div>
            </div>

            <!-- Odontogram Section -->
            <div class="mt-4">
              <div class="d-flex justify-content-between align-items-center border-bottom pb-2 mb-3">
                <h4 class="mb-0">
                  <i class="bi bi-grid-3x3-gap me-2"></i>Odontogram
                </h4>
              </div>
              <div class="mb-3">
                  <% if @client.has_custom_odontogram? %>
                      <div class="alert alert-info">
                          <i class="bi bi-info-circle me-2"></i>
                          This client has a customized odontogram.
                          <button type="button" class="btn btn-warning"
                            data-bs-toggle="modal"
                            data-bs-target="#resetModal"
                            data-item-name="User Settings"
                            data-item-type="configuration"
                            data-item-url="/settings/reset">
                            <i class="bi bi-arrow-counterclockwise"></i> Reset Settings
                          </button>
                        </div>
                  <% end %>
              </div>
            </div>

            <div class="mb-3">
              <%= image_tag @client.odontogram_url, class: "img-fluid rounded mx-auto d-block", style: "max-height: 300px; box-shadow: 0 2px 5px rgba(0,0,0,0.1);" %>
            </div>

            <% unless @client.has_custom_odontogram? %>
                <div class="alert alert-info d-flex align-items-center">
                    <i class="bi bi-info-circle me-2 fs-5"></i>
                    <div>This client is using the default odontogram.</div>
                </div>
            <% end %>
        </div>

        <div class="card-footer bg-light p-3">
          <div class="d-flex justify-content-end gap-2">
            <% if defined?(clients_path) %>
              <%= link_to clients_path, class: "btn btn-outline-secondary" do %>
                <i class="bi bi-x-circle me-1"></i>Cancel
              <% end %>
            <% end %>
            <%= form.submit class: "btn btn-primary", value: client.new_record? ? "Create Client" : "Update Client" do %>
              <i class="bi bi-check-circle me-1"></i>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
