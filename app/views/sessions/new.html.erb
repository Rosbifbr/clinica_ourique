<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg p-4 mb-4 mt-5">
                <h1 class="text-center mb-4">Sign In</h1>

                <%= form_with url: sign_in_path, method: :post, class: "mt-3" do %>
                    <div class="mb-4">
                        <%= label_tag :name, "Name", class: "form-label fw-medium" %>
                        <%= text_field_tag :name, nil,
                            class: "form-control form-control-lg",
                            placeholder: "Enter your username" %>
                    </div>

                    <div class="mb-4">
                        <%= label_tag :password, "Password", class: "form-label fw-medium" %>
                        <%= password_field_tag :password, nil,
                            class: "form-control form-control-lg",
                            placeholder: "Enter your password" %>
                    </div>
                    <div class="d-grid gap-2">
                        <%= submit_tag 'Sign In', class: "btn btn-primary btn-lg mb-3" %>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>
