<h1>Sign In</h1>
<%= form_with url: sign_in_path, method: :post do %>
  <div>
    <%= label_tag :name %> <br>
    <%= text_field_tag :name %>
  </div>
  <div>
    <%= label_tag :password %> <br>
    <%= password_field_tag :password %>
  </div>
  <div>
    <%= submit_tag 'Sign In' %>
  </div>
<% end %>

<br>

<div>
  <%= link_to "Create User", new_user_path %>
</div>

<% if flash[:alert] %>
  <p style="color: red;"><%= flash[:alert] %></p>
<% end %>
